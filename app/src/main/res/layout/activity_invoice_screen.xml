<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InvoiceScreen">

    <TextView
        android:id="@+id/textView50"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:gravity="center_vertical|end"
        android:text="Location:"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/textViewInvoiceLocation"
        app:layout_constraintEnd_toStartOf="@+id/textViewInvoiceLocation"
        app:layout_constraintTop_toTopOf="@+id/textViewInvoiceLocation"
        app:layout_constraintVertical_bias="0.356" />

    <TextView
        android:id="@+id/textViewInvoiceDate"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:enabled="false"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="@+id/textViewInvoiceOderId"
        app:layout_constraintStart_toStartOf="@+id/textViewInvoiceOderId"
        app:layout_constraintTop_toBottomOf="@+id/textViewInvoiceOderId" />

    <TextView
        android:id="@+id/textView49"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:gravity="center_vertical|end"
        android:text="Date:"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/textViewInvoiceDate"
        app:layout_constraintEnd_toStartOf="@+id/textViewInvoiceDate"
        app:layout_constraintTop_toTopOf="@+id/textViewInvoiceDate"
        app:layout_constraintVertical_bias="0.275" />


    <TextView
        android:id="@+id/textViewCostInvoice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="center_horizontal"
        android:text="Total Cost: $"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewInvoiceLocation"
        tools:ignore="MissingConstraints" />

    <ListView
        android:id="@+id/listOrderItemsInvoice"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewCostInvoice"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/textView47"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="INVOICE"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView48"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:gravity="center_vertical|end"
        android:text="Order ID:"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textViewInvoiceDate"
        app:layout_constraintEnd_toStartOf="@+id/textViewInvoiceOderId"
        app:layout_constraintTop_toTopOf="@+id/textViewInvoiceOderId"
        app:layout_constraintVertical_bias="0.191" />

    <TextView
        android:id="@+id/textViewInvoiceOderId"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:enabled="false"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView47" />

    <TextView
        android:id="@+id/textViewInvoiceLocation"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:enabled="false"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/textViewInvoiceDate"
        app:layout_constraintStart_toStartOf="@+id/textViewInvoiceDate"
        app:layout_constraintTop_toBottomOf="@+id/textViewInvoiceDate" />

</androidx.constraintlayout.widget.ConstraintLayout>